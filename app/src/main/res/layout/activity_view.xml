<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccccff"
    tools:context=".ViewActivity">

    <include
        layout="@layout/header"
        android:id="@+id/headerLayout" />

    <LinearLayout
        android:id="@+id/infoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- Month -->
        <TextView
            android:id="@+id/labelMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Month:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4634A7"
            android:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/textMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="30dp" />

        <!-- Unit -->
        <TextView
            android:id="@+id/labelUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Unit:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4634A7"
            android:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/textUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="30dp" />

        <!-- Total Charges -->
        <TextView
            android:id="@+id/labelTotalCharges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Total Charges:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4634A7"
            android:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/textTotalCharges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="30dp" />

        <!-- Rebate -->
        <TextView
            android:id="@+id/labelRebate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Rebate (%):"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4634A7"
            android:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/textRebate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="30dp" />

        <!-- Final Cost -->
        <TextView
            android:id="@+id/labelFinalCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Final Cost:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4634A7"
            android:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/textFinalCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="32dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:fontFamily="@font/poppins_medium"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        style="@style/Primary" />

</RelativeLayout>